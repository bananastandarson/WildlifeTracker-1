<p id="notice"><%= notice %></p>

<h1>Listing Sightings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Animal</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date %></td>
        <td><%= sighting.time.strftime('%I:%M') %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td>
          <a href="/animals/<%= sighting.animal.id %>">
            <%= sighting.animal.name %>
          </a>
        </td>
        <td>
          <a href="/regions/<%= sighting.region.id %>">
            <%= sighting.region.name %>
          </a>
        </td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sighting', new_sighting_path %>

<div id="calendar"></div>
